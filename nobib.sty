\RenewDocumentCommand{\cite}{som}{
  \prop_get:NnNTF \l_nobib_info_prop {#3} \l_tmpa_tl {  
    \IfBooleanTF {#1} {
      % starred version:       
      \IfValueTF {#2} {
        \color_group_begin: \color_select:n {red}
        \par------------------------------------------?
        ?------------------------------------------\par
        Error!~Gave~an~optional~argument~with~the~starred~version~while~
        citing~the~reference~``\texttt{#3}''.
        \par------------------------------------------?
        ?------------------------------------------\par
        \color_group_end:
      } {
        % print the citation as <author> (<year>)
        \tl_item:Nn \l_tmpa_tl {1} \c_space_token
        ( \tl_item:Nn \l_tmpa_tl {2} )
      }
    } {
      % unstarred version: 
      \IfValueTF {#2} {
        \token_if_eq_meaning:NNTF #2 a {
          % print just the author name <author>
          \tl_item:Nn \l_tmpa_tl {1}
        } {
          \token_if_eq_meaning:NNTF #2 y {
            % print just the year of publication <year>
            \tl_item:Nn \l_tmpa_tl {2}
          } {
            \color_group_begin: \color_select:n {red}
            \par------------------------------------------?
            ?------------------------------------------\par
            Error!~Did~not~specify~the~proper~argument~(`a'~or~`y')~
            while~citing~the~reference~``\texttt{#3}''.
            \par------------------------------------------?
            ?------------------------------------------\par
            \color_group_end:
          }
        }              
      } {
        % print the citation as <author>, <year>
        \tl_item:Nn \l_tmpa_tl {1} , \c_space_token
        \tl_item:Nn \l_tmpa_tl {2}
      }
    }
    
    %-------------------------------------------------------------
    % add the label to the label property list
    %-------------------------------------------------------------
    \tl_clear:N \l_tmpa_tl
    \prop_get:NnNTF \l_nobib_labels_prop {#3} \l_tmpa_tl {
      \int_set:Nn \l_tmpa_int {\tl_count:N \l_tmpa_tl}
    } {
      \int_set:Nn \l_tmpa_int {0}
    }
    \int_incr:N \l_tmpa_int
    % need to use \exp_args:NNe since \tl_put_right:Nn is not defined
    \exp_args:NNe \tl_put_right:Nn \l_tmpa_tl {{#3 - \int_use:N \l_tmpa_int}}
    \prop_put:NnV \l_nobib_labels_prop {#3} \l_tmpa_tl

    % create the label for backreference
    \label{#3 - \int_use:N \l_tmpa_int} 
  } {
    % ERROR! The citation key does not exist.
    \color_group_begin: \color_select:n {red}
    \par------------------------------------------?
    ?------------------------------------------\par
    Error!~The~citation~key~``\texttt{#3}''~does~not~exist!~Please~add~
    it~using~the~``\texttt{\textbackslash nobibReferenceEntry}''~command.
    \par------------------------------------------?
    ?------------------------------------------\par
    \color_group_end:
  }
}

